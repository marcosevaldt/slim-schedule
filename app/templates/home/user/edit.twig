{% extends 'interface/home.twig' %}
{% block content %}

{% include 'error/error.twig' %}
{% include 'flash/flash.twig' %}

<div class="col-md-4 offset-md-4">

<form>
  <div class="form-group row">
    <label for="email" class="col-2 col-form-label">Email</label>
    <div class="col-12">
      <input class="form-control" type="email" placeholder="teste@teste.com" name="email" value="{{usuario.email}}" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="senha" class="col-4 col-form-label">Senha</label>
    <div class="col-12">
      <input class="form-control" type="text" placeholder="123456" name="senha" required>
    </div>
  </div>

  <div class="form-group row">
    <label for="resenha" class="col-8 col-form-label">Confirme Senha</label>
    <div class="col-12">
      <input class="form-control" type="text" placeholder="123456" name="resenha" required>
    </div>
  </div>

  <input type="hidden" value="{{usuario.id}}" name="id"/>

  <button class="btn btn-primary" formmethod="POST" formaction="{{path_for('home.user.update')}}">Atualizar</button>
</form>

</div>
{% endblock %}
